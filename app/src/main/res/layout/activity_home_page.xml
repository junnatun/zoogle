<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomePage"
    android:orientation="vertical"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="50dp">

    <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo Zoey!"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="28sp"
            android:layout_marginBottom="26dp"/>

    <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang Zoo Lovers!"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="26dp"/>

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:maxWidth="342dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_tiket" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="21dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Satwa"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Selengkapnya"
                android:textSize="14sp" />

        </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:cropToPadding="false"
                android:maxHeight="120dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/zona_burung" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:maxHeight="120dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/zona_cakar" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:maxHeight="120dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/zona_mamalia" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:maxHeight="120dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/zona_petting_zoo" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:maxHeight="120dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/zona_primata" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:maxHeight="120dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/zona_reptil" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="21dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Wahana"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Selengkapnya"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/imageButton6"
            android:adjustViewBounds="true"
            android:backgroundTint="#FFFFFF"
            android:maxHeight="164dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/atv" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#FFFFFF"
            android:maxHeight="164dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/interaksi_gajah" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/imageButton6"
            android:adjustViewBounds="true"
            android:backgroundTint="#FFFFFF"
            android:maxHeight="164dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/bumper_boat" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:backgroundTint="#FFFFFF"
            android:maxHeight="164dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/speed_boat" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>